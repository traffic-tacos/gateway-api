# Server Configuration
SERVER_PORT=8000
SERVER_ENVIRONMENT=development

# Redis Configuration
REDIS_ADDRESS=localhost:6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_MAX_RETRIES=3
REDIS_POOL_SIZE=100
REDIS_POOL_TIMEOUT=4s

# JWT Configuration (Required - Set your actual values)
JWT_JWKS_ENDPOINT=https://your-auth-provider.com/.well-known/jwks.json
JWT_ISSUER=https://your-auth-provider.com
JWT_AUDIENCE=gateway-api
JWT_CACHE_TTL=10m

# Backend API Configuration
BACKEND_RESERVATION_API_BASE_URL=http://localhost:8001
BACKEND_RESERVATION_API_TIMEOUT=600ms
BACKEND_PAYMENT_API_BASE_URL=http://localhost:8003
BACKEND_PAYMENT_API_TIMEOUT=400ms

# Rate Limiting Configuration
RATE_LIMIT_RPS=50
RATE_LIMIT_BURST=100
RATE_LIMIT_WINDOW_SIZE=1s
RATE_LIMIT_ENABLED=true
RATE_LIMIT_EXEMPT_PATHS=/healthz,/readyz,/metrics

# Observability Configuration
OBSERVABILITY_METRICS_PATH=/metrics
OBSERVABILITY_OTLP_ENDPOINT=http://localhost:4318
OBSERVABILITY_TRACING_ENABLED=true
OBSERVABILITY_SAMPLE_RATE=0.1

# CORS Configuration
CORS_ALLOW_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# AWS Configuration (for production)
# AWS_REGION=ap-northeast-2
# AWS_PROFILE=tacos

# Production Redis (ElastiCache)
# REDIS_ADDRESS=your-elasticache-cluster.cache.amazonaws.com:6379

# Production Backend URLs
# BACKEND_RESERVATION_API_BASE_URL=http://reservation-api.tickets-api.svc.cluster.local:8080
# BACKEND_PAYMENT_API_BASE_URL=http://payment-sim-api.tickets-api.svc.cluster.local:8080